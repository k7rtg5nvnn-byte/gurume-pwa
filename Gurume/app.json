{
  "expo": {
    "name": "Gurume",
    "slug": "gurume",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "gurume",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFF8F0"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.gurume.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Gurume rotalarınıza fotoğraf eklemek için galeri erişimi gereklidir.",
        "NSCameraUsageDescription": "Gurume rotalarınıza fotoğraf çekmek için kamera erişimi gereklidir.",
        "NSPhotoLibraryAddUsageDescription": "Gurume fotoğraflarınızı galerinize kaydetmek için izin gereklidir."
      }
    },
    "android": {
      "package": "com.gurume.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "backgroundColor": "#FFF8F0",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FFF8F0",
          "dark": {
            "backgroundColor": "#1A0F0A"
          }
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Gurume rotalarınıza fotoğraf eklemek için galeri erişimi gereklidir.",
          "cameraPermission": "Gurume rotalarınıza fotoğraf çekmek için kamera erişimi gereklidir."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "YOUR_PROJECT_ID"
      }
    },
    "owner": "YOUR_EXPO_USERNAME"
  }
}
